@model Setting
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Setting Detail</h1>
    </div>
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title font-weight-bold">Logo</h5>
                <img class="card-img-top" style="width:50%" src="~/assets/images/@Model.Logo" alt="Card image cap">
                <h5 class="card-title font-weight-bold">Offer</h5>
                @Html.Raw(Model.Offer)
                <h5 class="card-title font-weight-bold">Support Phone</h5>
                <p>@Model.SupportPhone</p>
                <h5 class="card-title font-weight-bold">Phone</h5>
                <p>@Model.Phone</p>
                <h5 class="card-title font-weight-bold">Email</h5>
                <p>@Model.Email</p>
                <h5 class="card-title font-weight-bold">Address</h5>
                <p>@Model.Address</p>
                <h5 class="card-title font-weight-bold">Work Day</h5>
                <p>@Model.WorkDay</p>
                <a asp-action="Index" class="btn btn-primary">Go Back</a>
            </div>
        </div>
    </div>
</div>