@model Setting
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Settings</h1>
    </div>
    <div class="col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Logo</th>
                    <th scope="col">Email</th>
                    <th scope="col">Offer</th>
                    <th scope="col">Setting</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>
                        <img src="~/assets/images/@Model.Logo" alt="Alternate Text" style="width:100%" />
                    </td>
                    <td>@Model.Email</td>
                    <td>@Html.Raw(Model.Offer)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Detail">Detail</a>
                        <a class="btn btn-warning" asp-action="Update">Update</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>