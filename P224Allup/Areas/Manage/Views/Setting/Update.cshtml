@model Setting
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Setting Update</h1>
    </div>
    <div class="col-lg-6">
        <img style="width:50%" src="~/assets/images/@Model.Logo" alt="Alternate Text" />
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="SupportPhone"></label>
                <input asp-for="SupportPhone" class="form-control" placeholder="Enter email">
                <span asp-validation-for="SupportPhone"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" placeholder="Enter email">
                <span asp-validation-for="Phone"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter email">
                <span asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkDay"></label>
                <input asp-for="WorkDay" class="form-control" placeholder="Enter email">
                <span asp-validation-for="WorkDay"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer"></label>
                <textarea asp-for="Offer" class="form-control" placeholder="Enter email"></textarea>
                <span asp-validation-for="Offer"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoImage"></label>
                <input class="form-control" accept="image/png" asp-for="LogoImage" placeholder="Enter ProductImagesFile">
                <span class="text-danger" asp-validation-for="LogoImage"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationFormScriptPartial">
    <script>
        CKEDITOR.replace('Offer');
    </script>
}