@model IEnumerable<Product>
@{ 
    int productCount = 0;
}
<div class="product-items">
    <div class="row product-active">
        @for (int i = 0; i < Math.Ceiling((double)Model.Count() / 2); i++)
        {
        <div class="col-lg-2">
            @foreach (Product product in Model.Skip(productCount).Take(2))
            {
                <div class="single-product mt-30">
                    <div class="product-image">
                        <a href="single-product.html">
                            <img class="first-image" src="~/assets/images/product/@product.MainImage" alt="product">
                            <img class="second-image" src="~/assets/images/product/@product.HoverImage" alt="product">
                        </a>
                        <ul class="product-meta">
                            <li><a class="addbasketlink" asp-controller="product" asp-action="AddBasket" asp-route-id="@product.Id"><i class="icon ion-bag"></i></a></li>
                            <li><a href="#"><i class="icon ion-android-favorite-outline"></i></a></li>
                            <li><a href="#"><i class="icon ion-android-options"></i></a></li>
                            <li><a class="productdetail" data-toggle="modal" data-target="#productQuickModal" asp-controller="Product" asp-action="DetailModal" asp-route-id="@product.Id"><i class="icon ion-android-open"></i></a></li>
                        </ul>
                    </div>
                    <div class="product-content">
                        <ul class="product-rating">
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                            <li><i class="fas fa-star"></i></li>
                        </ul>
                        <h4 class="product-title"><a href="single-product.html">Cale 6 eu accumsan massa facilisis Madden by Steve</a></h4>
                        <div class="product-price">
                            @if (product.DiscountPrice > 0)
                            {
                                <span class="regular-price">€@product.Price.ToString("0.00")</span>
                                <span class="price-sale">€@product.DiscountPrice.ToString("0.00")</span>
                            }
                            else
                            {
                                <span class="price-sale">€@product.Price.ToString("0.00")</span>
                            }
                        </div>
                    </div>
                </div> <!-- single product -->
                productCount++;
            }
        </div>
        }

    </div> <!-- row -->
</div> <!-- product items -->