@model IEnumerable<BasketVM>
@{
    double subTotal = 0;
    double tax = 0;
    double total = 0;
    foreach (var item in Model)
    {
        total += (item.Price * item.Count) + (item.ExTax * item.Count);
    }
}
<div class="cart-btn">
    <a asp-action="Index" asp-controller="Basket">
        <i class="icon ion-bag"></i>
        <span class="text">Cart :</span>
        <span class="total">$@total.ToString("0.00")</span>
        <span class="count">@Model.Count()</span>
    </a>
</div>
<div class="mini-cart">
    <ul class="cart-items">
        @foreach (BasketVM basketVM in Model)
        {
            <li>
                <div class="single-cart-item d-flex">
                    <div class="cart-item-thumb">
                        <a href="single-product.html"><img src="~/assets/images/product/@basketVM.Image" alt="product"></a>
                        <span class="product-quantity">@(basketVM.Count)x</span>
                    </div>
                    <div class="cart-item-content media-body">
                        <h5 class="product-name"><a href="single-product.html">@basketVM.Title</a></h5>
                        <span class="product-price">€@basketVM.Price.ToString("0.00")</span>
                        <a asp-controller="Basket" asp-action="DeleteBasket" asp-route-id="@basketVM.ProductId" class="product-close deletebasket"><i class="fal fa-times"></i></a>
                    </div>
                </div>
            </li>
            subTotal += (basketVM.Price * basketVM.Count);
            tax += (basketVM.ExTax * basketVM.Count);
        }

    </ul>
    <div class="price_content">
        <div class="cart-subtotals">
            <div class="products price_inline">
                <span class="label">Subtotal</span>
                <span class="value">€@subTotal.ToString("0.00")</span>
            </div>
            <div class="shipping price_inline">
                <span class="label">Shipping</span>
                <span class="value">€7.00</span>
            </div>
            <div class="tax price_inline">
                <span class="label">Taxes</span>
                <span class="value">€@tax.ToString("0.00")</span>
            </div>
        </div>
        <div class="cart-total price_inline">
            <span class="label">Total</span>
            <span class="value">€@(total.ToString("0.00"))</span>
        </div>
    </div> <!-- price content -->
    <div class="checkout text-center">
        <a asp-action="Create" asp-controller="Order" class="main-btn">Checkout</a>
    </div>
</div> <!-- mini cart -->